# =========================
# Database Configuration
# =========================
DATABASE_URL="postgresql://<username>:<password>@<host>:26257/<db_name>?sslmode=verify-full"
DATABASE_PUBLIC_URL="postgresql://<username>:<password>@<host>:26257/<db_name>?sslmode=verify-full"

# =========================
# Gemini AI Configuration
# =========================
GEMINI_API_KEY=<your_gemini_api_key>
GEMINI_GENERATION_MODEL="gemini-1.5-pro"
GEMINI_EMBEDDING_MODEL="embedding-001"

# =========================
# Google Cloud Configuration
# =========================
GOOGLE_APPLICATION_CREDENTIALS="./data/service-account-key.json"
VISION_API_KEY_PATH="./data/vision-key.json"

# =========================
# Server Configuration
# =========================
NODE_ENV=development
PORT=8080
SSL_ENABLED=true
SSL_REJECT_UNAUTHORIZED=true

# =========================
# Upload Settings
# =========================
UPLOAD_TIMEOUT_MINUTES=30
API_TIMEOUT_MINUTES=15
MAX_FILE_SIZE=150mb
MAX_PDF_PAGES=100

# =========================
# Auth and Security
# =========================
JWT_SECRET=<your_jwt_secret_key_here>
JWT_EXPIRATION=24h
ADMIN_PASSWORD=<default_admin_password>
SESSION_SECRET=<session_secret_key>

# =========================
# Feature Flags
# =========================
ENABLE_VISION_API=true
ENABLE_CROSS_VALIDATION=true
ENABLE_SENSITIVE_RULES=true
