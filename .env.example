# =========================
# Database Configuration
# =========================
DATABASE_URL="postgresql://<username>:<password>@<host>:26257/<db_name>?sslmode=verify-full"
DATABASE_PUBLIC_URL="postgresql://<username>:<password>@<host>:26257/<db_name>?sslmode=verify-full"

# =========================
# Gemini AI Configuration
# =========================
GEMINI_API_KEY=<your_gemini_api_key>

# =========================
# Server Configuration
# =========================
PORT=8080
NODE_ENV=development

# =========================
# Upload Configuration
# =========================
MAX_FILE_SIZE=150mb
MAX_PDF_PAGES=100
UPLOAD_TIMEOUT_MINUTES=30

# =========================
# Google Cloud Configuration
# =========================
GOOGLE_CLOUD_PROJECT_ID=<your_project_id>
GCS_BUCKET_NAME=<your_bucket_name>
GOOGLE_CLOUD_KEY_FILE=./service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=./vision-key.json
GOOGLE_APPLICATION_CREDENTIALS_JSON=<json_string_here>

# =========================
# JWT Configuration
# =========================
JWT_SECRET=<your_jwt_secret>

# =========================
# API Timeout
# =========================
API_TIMEOUT_MINUTES=15

# =========================
# SSL (Production - Railway)
# =========================
SSL_ENABLED=true
SSL_REJECT_UNAUTHORIZED=true
